<div class="new-post-form">
    <form action="" method="post">
        <h2>Create New Post</h2>
        <p>Please use this form to make a new post!</p>
        <hr>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-heading"></i>
                    </span>
                </div>
                <input type="text" id="post-title" class="form-control" placeholder="Title" name="post-title" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-pencil-alt"></i>
                    </span>
                </div>
                <input type="text" id="post-content" class="form-control" placeholder="Content" name="post-content" required="required">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-secondary btn-lg">Create</button>
        </div>
    </form>
</div>

{{#if posts.length}}
<section>
  <h1>Your Posts</h1>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link nav-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}


<script src="/"></script>